<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TimeHeadlineParent">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/time_headline</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="CountdownParent">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/countdown</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="Countdown" parent="CountdownParent" />

    <style name="TimeHeadline" parent="TimeHeadlineParent" />

    <style name="CoverHeadlineParent">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/cover_headline</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="CoverHeadline" parent="CoverHeadlineParent" />

    <style name="TapIndicator">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="DescriptionText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/description_text</item>
    </style>

</resources>
